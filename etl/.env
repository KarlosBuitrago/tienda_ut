# ===============================================
# 🔧 CONFIGURACIÓN DEL PROCESO ETL
# ===============================================

# Bases de datos
OLTP_HOST=localhost
OLTP_USER=root
OLTP_PASSWORD=Buitra90
OLTP_DATABASE=tienda_cipa

DW_HOST=localhost
DW_USER=root
DW_PASSWORD=Buitra90
DW_DATABASE=tienda_cipa_dw

# Configuración ETL
ETL_BATCH_SIZE=1000
ETL_LOG_LEVEL=info
ETL_MAX_RETRIES=3
ETL_TIMEOUT=30000

# Programación (cron expressions)
ETL_SCHEDULE_DIMENSIONS=0 2 * * *     # Diario a las 2 AM
ETL_SCHEDULE_FACTS=0 3 * * *          # Diario a las 3 AM  
ETL_SCHEDULE_AGREGADOS=0 4 * * *      # Diario a las 4 AM

# Configuración de logs
LOG_DIRECTORY=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=7

# Configuración de alertas (opcional)
EMAIL_ALERTS_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password